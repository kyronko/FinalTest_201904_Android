<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FF0000">

                    </solid>
                </shape>
            </item>

            <item
                android:right="10dp"
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp">

                <shape>
                    <gradient android:endColor="#0000FF"
                        android:startColor="#00FF00" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FF0000">

                    </solid>
                </shape>
            </item>
            <item>
                <shape>
                    <gradient android:endColor="#0000FF" android:startColor="#00FF00" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>